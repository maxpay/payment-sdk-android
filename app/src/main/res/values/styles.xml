<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/AppPrimaryButton</item>
        <item name="materialButtonStyle">@style/AppPrimaryButton</item>
        <item name="android:actionMenuTextColor">@color/colorWhite</item>
    </style>

    <style name="BottomMaterialCard">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/corner_radius_popups</item>
        <item name="cornerSizeTopLeft">@dimen/corner_radius_popups</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="AppBorderButtonViolet" parent="Widget.AppCompat.Button">
        <item name="android:textAppearance">@style/AppBorderButtonTextAppearance</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/bg_btn_border_violet</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:backgroundTintMode">src_over</item>
        <item name="drawableTint">@color/colorSecondary</item>
    </style>
        <style name="AppInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
            <item name="theme">@style/AppInputLayoutTheme</item>
            <item name="boxBackgroundColor">@color/colorWindowBackground</item>
            <item name="hintTextAppearance">@style/InputLayoutHintText</item>
            <item name="android:textColorHint">@color/colorHint</item>
            <item name="prefixTextColor">@color/colorDarkText</item>
            <item name="boxStrokeColor">@color/colorLayoutThingsAttentionGrey</item>
            <item name="paddingStart">@dimen/padding_medium</item>
            <item name="paddingEnd">@dimen/padding_medium</item>
            <item name="android:layout_marginStart">@dimen/margin_medium</item>
            <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        </style>


    <style name="AppPrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/bg_btn_solid</item>
        <item name="android:textAppearance">@style/AppButtonTextAppearance</item>
        <item name="android:stateListAnimator">@animator/btn_animator</item>
        <item name="android:textColor">@color/colorLightText</item>
        <item name="iconPadding">0dp</item>
    </style>

    <style name="AppBorderButtonTextAppearance">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppButtonTextAppearance">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ColorSwitchStyle">
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>


</resources>