<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppInputLayoutTheme" parent="AppTheme">
        <item name="colorAccent">@color/colorDisabled</item>
        <item name="colorPrimary">@color/colorDisabled</item>
    </style>
    <style name="AppInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="theme">@style/AppInputLayoutTheme</item>
        <item name="boxBackgroundColor">@color/colorWindowBackground</item>
        <item name="hintTextAppearance">@style/InputLayoutHintText</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="prefixTextColor">@color/colorDarkText</item>
        <item name="boxStrokeColor">@color/colorLayoutThingsAttentionGrey</item>
        <item name="paddingStart">@dimen/padding_medium</item>
        <item name="paddingEnd">@dimen/padding_medium</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorToolbarTitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppToolbarTitle">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorToolbarTitle</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="InputLayoutHintText" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/colorHint</item>
    </style>

    <style name="AppInputEditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox.Dense">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:textColor">@color/colorDarkText</item>
    </style>

    <style name="DialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>
    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="android:indeterminateTint">@color/colorPrimary</item>
    </style>


